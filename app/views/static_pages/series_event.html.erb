<!DOCTYPE html>
<html>

<head>
    <style>

    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
        /* Add your CSS styles here */
        button {
            margin-right: 20px;
            padding: 5px 10px; /* Adjust the padding to increase button size */
            font-size: 12px; /* Adjust the font size */
        }
        p {
            text-align: center; /* Center-align the content */
            margin-right: 20px;
            padding: 10px 15px; /* Adjust the padding to increase button size */
            font-size: 12px; /* Adjust the font size */
        }
        h3 {
            text-align: center;
            font-size: 20px;
        }
        .form-input {
            margin-top: 10px;
            padding: 5px 10px;
            margin-bottom: 10px; /* Adjust the margin as needed */
        }        
        body {
        /* Background color */
        background-color: #e2c9be; /* You can use the gradient color here */
        /* Background image */
        background-image: linear-gradient(315deg, #e2c9be 0%, #fbf7e9 74%); /* Replace with your downloaded image file */
        background-size: cover; /* Cover the entire viewport */
        background-repeat: no-repeat; /* Do not repeat the image */
        }

    </style>
    <script>
        // Function to add a new input field
        function addField(fieldType) {
            const container = document.getElementById(`${fieldType}-container`);
            const newField = document.createElement("div");
            newField.innerHTML = `
                <input type="text" class="form-input" name="${fieldType}[]" placeholder="${fieldType}">
                <button type="button" onclick="removeField(this)">Delete</button>
            `;
            container.appendChild(newField);
        }

        // Function to remove the clicked input field
        function removeField(button) {
            const container = button.parentNode.parentNode;
            container.removeChild(button.parentNode);
        }
    </script>
</head>

<body>
    <h3>Series Event Form</h3>
    <p>
        <%= form_with do |f|%>
        <div>
            <%= f.label "Event Name" %>
            <%= f.text_field :name, class: 'form-input' %>
        </div>

        <div id="Event-venue-container">
            <%= f.label "Event Venue" %>
            <%= f.text_field :venue, class: 'form-input' %>
            <button type="button" onclick="addField('Event-venue')">Add</button>
        </div>

        <div id="Event-date-container">
            <%= f.label "Event Date" %>
            <%= f.date_field :Date, class: 'form-input' %>
            <button type="button" onclick="addField('Event-date')">Add</button>
        </div>

        <div id="Max-capacity-container">
            <%= f.label "Max Capacity" %>
            <%= f.number_field :capacity, in: 0..10000000, step: 1, class: 'form-input' %>
            <button type="button" onclick="addField('Max-capacity')">Add</button>
        </div>

        <div id="Start-time-container">
            <%= f.label "Start Time" %>
            <%= f.time_field :timeStart, class: 'form-input' %>
            <button type="button" onclick="addField('Start-time')">Add</button>
        </div>

        <div id="End-time-container">
            <%= f.label "End Time" %>
            <%= f.time_field :timeEnd, class: 'form-input' %>
            <button type="button" onclick="addField('End-time')">Add</button>
        </div>

        <div id="Duration-container">
            <%= f.label "Duration(minutes)" %>
            <%= f.text_field :duration, class: 'form-input' %>
            <button type="button" onclick="addField('Duration')">Add</button>
        </div>

        <div>
            <%= f.submit "Submit", class: 'form-input' %>
        </div>
        <% end %>
    </p>
</body>

</html>
