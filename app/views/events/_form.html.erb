<!DOCTYPE html>
<html>
<head>
    <style>
        /* Add some spacing between the buttons */
        button {
            margin-right: 20px;
            padding: 5px 10px; /* Adjust the padding to increase button size */
            font-size: 12px; /* Adjust the font size */
        }
        p {
            text-align: center; /* Center-align the content */
            margin-right: 20px;
            padding: 10px 15px; /* Adjust the padding to increase button size */
            font-size: 12px; /* Adjust the font size */
        }
        h3 {
            text-align: center;
            font-size: 20px;
        }
        .form-input {
            margin-top: 10px;
            padding: 5px 10px;
            margin-bottom: 10px; /* Adjust the margin as needed */
        }        
        body {
        /* Background color */
        background-color: #e2c9be; /* You can use the gradient color here */
        /* Background image */
        background-image: linear-gradient(315deg, #e2c9be 0%, #fbf7e9 74%); /* Replace with your downloaded image file */
        background-size: cover; /* Cover the entire viewport */
        background-repeat: no-repeat; /* Do not repeat the image */
        }
    </style>
</head>

<script>
    // Function to add a new input field
    function add_field(fieldType) {
        const container = document.getElementById(`${fieldType}-container`);
        const newField = document.createElement("div");
        newField.innerHTML = `
            <%= text_field_tag 'email' %>
            <button type="button" onclick="remove_field(this)">Delete</button>
        `;
        container.appendChild(newField);
    }

    // Function to remove the clicked input field
    function remove_field(button) {
        const container = button.parentNode.parentNode;
        container.removeChild(button.parentNode);
    }
</script>

<body>
<%= form_with(model: @event) do |form| %>
  <% if @event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Event Name", style: "display: block" %>
    <%= form.text_field :name, class: 'form-input', id: 'Event Name' %>
  </div>

  <div>
    <%= form.label "Event Venue", style: "display: block" %>
    <%= form.text_field :venue, class: 'form-input', id: 'Event Venue' %>
  </div>

  <div>
    <%= form.label "Event Date", style: "display: block" %>
    <%= form.date_field :date, class: 'form-input', id: 'Event Date' %>
  </div>

  <div>
    <%= form.label "Event Time", style: "display: block" %>
    <%= form.time_field :time, class: 'form-input', id: 'Event Time' %>
  </div>

  <div>
    <h2> List of Attendees </h2>
    <%= form.label "Email", style: "display: block" %>
    <%= form.email_field :email, class: 'form-input', id: 'Event Time' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
</body>
</html>