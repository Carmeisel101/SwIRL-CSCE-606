<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #e2c9be;
            background-image: linear-gradient(315deg, #e2c9be 0%, #fbf7e9 74%);
            background-size: cover;
            background-repeat: no-repeat;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Arial', sans-serif;
        }

        .event-card {
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s;
        }

        .event-card:hover {
            transform: translateY(-10px);
        }

        .gradient-btn {
            background: linear-gradient(45deg, #4CAF50, #44A1F2);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s;
        }

        .gradient-btn:hover {
            background: linear-gradient(45deg, #44A1F2, #4CAF50);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.4);
            transform: translateY(-2px);
        }

        .event-header {
            padding: 30px 20px;
            background-color: #4CAF50;
            color: white;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
            font-size: 2em;
            font-weight: bold;
            letter-spacing: 2px;
            cursor: pointer; /* Make the event name clickable */
        }

        .event-content {
            display: none; /* Hide the event details by default */
            padding: 30px 20px;
        }

        .highlight-text {
            color: rgb(8, 92, 120);
            padding: 5px 10px;
            border-radius: 10px;
            font-size: 1.5em;
            font-weight: bold;
        }

        .event-list {
            cursor: pointer;
        }
    </style>
</head>

<body>
    <% @events.each do |event| %>
        <% attending_count = 0 %>
        <% not_attending_count = 0 %>
        <div class="event-card">
            <div class="event-header" onclick="toggleEventContent('<%= event.id %>')">
                <h3><%= event.name %></h3>
                <h3><%= event.event_info&.date&.strftime('%A, %d %b %Y') %></h3>
            </div>
            <div id="event-content-<%= event.id %>" class="event-content">
                <h2>Event Details:</h2>
                <div>
                    <h2>Time: <%= event.event_info&.start_time&.strftime('%H:%M %p') %></h2>
                </div>
                <div>
                    <h2>Location: <%= event.event_info&.venue %></h2>
                </div>
                <br> <!-- Line break for spacing -->
                <div>
                    <h2>Yes/No Ratio: <%= attending_count %>/<%= not_attending_count %></h2>
                </div>
                <div>
                    <h2>Seat Occupancy: <%= event.event_info&.max_capacity %></h2>
                </div>
                <br> <!-- Line break for spacing -->
                <div>
                    <h2>Send Emails: <%= link_to 'Send Emails', invite_attendees_path(event) %></h2>
                </div>
                <h2>Attendees:</h2>
                <ul class="list-unstyled">
                    <% event.attendee_infos.each do |attendee_info| %>
                        <li class="attendee">
                            <strong>
                                <%= attendee_info&.name %>
                            </strong> -
                            Email: <%= attendee_info&.email %><br>
                            Status: <%= attendee_info&.is_attending == "yes" ? '<span class="text-success">Attending</span>'.html_safe : '<span class="text-danger">Not Attending</span>'.html_safe %><br>
                            <% if attendee_info&.is_attending == "yes" %>
                                <% attending_count += 1 %>
                            <% else %>
                                <% not_attending_count += 1 %>
                            <% end %>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>
    <div>
        <%= link_to "Back to Home", home_path, class: "gradient-btn", style: "text-align: center;" %>
    </div>
    <script>
        function toggleEventContent(eventId) {
            var eventContent = document.getElementById("event-content-" + eventId);
            if (eventContent.style.display === "none" || eventContent.style.display === "") {
                eventContent.style.display = "block";
            } else {
                eventContent.style.display = "none";
            }
        }
    </script>
</body>
</html>
